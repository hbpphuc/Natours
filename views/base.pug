            link(rel="stylesheet" href="/css/style.css")
            link(rel="shortcut icon" type="image/png" href="/img/favicon.png")

    body 
        //HEADER
        include _header
        
        //CONTENT
        block content

        //FOOTER
        include _footer

        script(src="/scripts/mapbox.js")
        