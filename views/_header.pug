header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All tours
        form.nav__search
            button.nav__search-btn
                svg
                    use#icon-search(xlink:href="/img/icons.svg")
            input.nav__search-input(type="text" placeholder="Search tours")
    div.header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if loggedInUser
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me")
                img.nav__user-img(src=`/img/users/${loggedInUser.photo}` alt=`Photo of ${loggedInUser.name}`)
                span= loggedInUser.name.split(' ')[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="/signup") Sign up